#include <stddef.h>
#include "libft.h"

size_t ft_strlcat(char *dst, const char *src, size_t dstsize)
{
	size_t f;
	size_t s;
	size_t a;

	f = 0;
	s = 0;
	a = dstsize;
	if (dst == NULL && src == NULL)
		return (0);
	if (dstsize == 0)
		return (ft_strlen(src));
	while (dst[f] != '\0')
		f++;
	while (src[s] != '\0' && f < dstsize - 1)
	{
		dst[f + s] = src[s];
		s++;
	}
	dst[f + s] = '\0';
	return (ft_strlen(src) + a);
}
